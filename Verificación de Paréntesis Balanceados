using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace BalanceoParentesisApp
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnVerificar_Click(object sender, EventArgs e)
        {
            string expresion = txtExpresion.Text;

            if (EstaBalanceada(expresion))
                lblResultado.Text = "✅ Fórmula balanceada.";
            else
                lblResultado.Text = "❌ Fórmula NO balanceada.";
        }

        private bool EstaBalanceada(string expresion)
        {
            Stack<char> pila = new Stack<char>();

            foreach (char c in expresion)
            {
                if (c == '(' || c == '{' || c == '[')
                {
                    pila.Push(c);
                }
                else if (c == ')' || c == '}' || c == ']')
                {
                    if (pila.Count == 0) return false;

                    char tope = pila.Pop();
                    if (!EsParCorrespondiente(tope, c)) return false;
                }
            }

            return pila.Count == 0;
        }

        private bool EsParCorrespondiente(char apertura, char cierre)
        {
            return (apertura == '(' && cierre == ')') ||
                   (apertura == '{' && cierre == '}') ||
                   (apertura == '[' && cierre == ']');
        }
    }
}
